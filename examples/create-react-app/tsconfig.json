{
  "extends": "../../config/tsconfig.base.json",
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
