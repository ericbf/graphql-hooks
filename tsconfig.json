{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "types": ["jest", "node"]
  },
  "exclude": ["cypress", "./cypress.config.ts"]
}
